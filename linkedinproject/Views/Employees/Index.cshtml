@model IEnumerable<linkedinproject.Models.Employee>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("First Name")
            </th>
            <th>
                @Html.DisplayName("Last Name")
            </th>

            <th>
                @Html.DisplayName("Profile Picture")
            </th>
            <th>
                @Html.DisplayName("Cover Picture")
            </th>
            
           
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    <img src="~/images/@item.ProfilePicutre"
                         class="rounded-circle"
                         height="50" width="50"
                         asp-append-version="true" />
                </td>
                <td>
                    <img src="~/images/@item.CoverPhoto"
                         class="rounded-circle"
                         height="50" width="50"
                         asp-append-version="true" />
                </td>
                
              
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>

                <td>
                   
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-area="" asp-controller="Admin" asp-action="EmployeeProfile" asp-route-employeeid="@item.Id">Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>
