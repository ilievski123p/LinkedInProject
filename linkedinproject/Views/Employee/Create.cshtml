@model linkedinproject.ViewModels.EmployeeViewModel



<div class="row">
    <div class="col-md-10" style="margin-top:5%; margin-left:5%;">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <label asp-for="ProfileImage" class="control-label">Profile Picture</label>
            <div class="custom-file">
                <input asp-for="ProfileImage" class="form-control" id="customFile">
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label">Cover Image</label>
                <div class="custom-file">
                    <input asp-for="CoverImage" class="form-control" id="customFile">
                </div>
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CVFile" class="control-label">CV</label>
                <div class="custom-file">
                    <input asp-for="CVFile" class="form-control" id="customFile">
                </div>
                <span asp-validation-for="CVFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverLetterFile" class="control-label">Cover Letter</label>
                <div class="custom-file">
                    <input asp-for="CoverLetterFile" class="form-control" id="customFile">
                </div>
                <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GitHubLink" class="control-label">Link from GitHub</label>
                <input asp-for="GitHubLink" class="form-control" />
                <span asp-validation-for="GitHubLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPosition" class="control-label">Current Position</label>
                <input asp-for="CurrentPosition" class="form-control" />
                <span asp-validation-for="CurrentPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WantedPosition" class="control-label">Wanted Position</label>
                <input asp-for="WantedPosition" class="form-control" />
                <span asp-validation-for="WantedPosition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div hidden>Description</div>
                <label asp-for="Description" class="control-label" hidden></label>
                <textarea type="text" rows="5" asp-for="Description" class="form-group" style="height:200px; width:250px;" hidden></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div hidden>Description</div>
                <label asp-for="Skills" class="control-label" hidden></label>
                <textarea type="text" rows="5" asp-for="Skills" class="form-group" style="height:200px; width:250px;" hidden></textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="Index">Back</a>
            </div>
        </form>
</div>
</div>



@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  