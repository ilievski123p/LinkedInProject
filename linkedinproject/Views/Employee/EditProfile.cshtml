@model linkedinproject.ViewModels.EmployeeViewModelProfile
<div class="row" style="position:relative; left:20%; margin-top:10%; width:225%; text-align:center; font-size:20px;">
    <div class="col-md-4">
        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"><strong>First Name</strong></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"><strong>Last Name</strong></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"><strong>Age</strong></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <label asp-for="ProfileImage" class="control-label"><strong>Profile Picture</strong></label>
            <div class="custom-file">
                <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile" >Choose file</label>
                <span asp-validation-for="ProfileImage" class="text-info" style="background-color:lightblue;"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label"><strong>Cover Image</strong></label> 
                <div class="custom-file">
                    <input asp-for="CoverImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPosition" class="control-label"><strong>Current Position</strong></label>
                <input asp-for="CurrentPosition" class="form-control" />
                <span asp-validation-for="CurrentPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WantedPosition" class="control-label"><strong>Wanted Position</strong></label>
                <input asp-for="WantedPosition" class="form-control" />
                <span asp-validation-for="WantedPosition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CVFile" class="control-label" hidden></label>
                <input asp-for="CVFile" class="form-control" hidden type="hidden" />
                <span asp-validation-for="CVFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverLetterFile" class="control-label" hidden></label>
                <input asp-for="CoverLetterFile" class="form-control" hidden  type="hidden"/>
                <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GitHubLink" class="control-label" hidden></label>
                <input asp-for="GitHubLink" class="form-control" hidden  type="hidden"/>
                <span asp-validation-for="GitHubLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label" hidden></label>
                <textarea type="hidden" rows="5" asp-for="Description" class="form-group" style="height:200px; width:250px;" hidden></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label" hidden></label>
                <input asp-for="Location" class="form-control" hidden type="hidden" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label" hidden></label>
                <input asp-for="PhoneNumber" class="form-control" hidden type="hidden" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label" hidden></label>
                <input asp-for="Mail" class="form-control" hidden  type="hidden"/>
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" hidden></label>
                <input asp-for="Password" class="form-control" hidden  type="hidden"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skills" class="control-label" hidden></label>
                <textarea type="hidden" rows="5" asp-for="Skills" class="form-group" style="height:200px; width:250px;" hidden></textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>
            <div class="form-group" style="position:relative; left:-42%;">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="position:relative; left:21.5%;">
    <a asp-action="EmployeeHomePage" asp-route-id="@Model.Id">Back to profile</a>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  