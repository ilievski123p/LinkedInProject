@model linkedinproject.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style=" background-image: url('../images/background.jpg'); background-size:cover;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border box-shadow mb-3" style="background-color:white;">
            <div style="float:left; opacity:1;">
                <a asp-area="" asp-controller="Home" asp-action="Index"> <img src="https://www.intelligencecareers.gov/images/ichome/searchjobs_icon.png" width="100" height="70" /> </a>
            </div>
            <a asp-area="" asp-controller="Employee" asp-action="Interests" asp-route-id="@Model.Id">
                <button style="position:relative; left:50%; font-size:25px; border:none;background-color:white;">Interests</button>
            </a>
            <a asp-area="" asp-controller="Employee" asp-action="Applications" asp-route-id="@Model.Id">
                <button style="position:relative; left:50%; font-size:25px; border:none;background-color:white;">Your applications</button>
            </a>
            <a asp-area="" asp-controller="Employee" asp-action="EmployeeHomePage" asp-route-id="@Model.Id">
                <button style="right:1%;float:right;position:absolute; font-size:20px; top:23%; font-family:Ebrima; background-color:white; border:none;">
                    <img src="~/images/@Model.ProfilePicutre"
                         style="border-radius:50%; width:50px; height:50px;"
                         asp-append-version="true" />
                    @Html.DisplayFor(model => model.FullName)
                </button>
            </a>
        </nav>
    </header>
    @foreach (var item in Model.Aplikacii)
    {
        if (Model.Id == item.EmployeeId)
        {
<div class="fontface" style="text-align:center; position:relative; border:solid 1px; font-weight:bold;">
    <strong style="font-size:40px;"> @Html.DisplayFor(modelItem => item.Oglas.Employer.Name)</strong>
    <hr />
      <div style="font-weight:bold; font-size:30px;">@Html.DisplayFor(modelItem => item.Oglas.JobTitle)</div>
      <div>@Html.DisplayFor(modelItem => item.Oglas.Description)</div>
</div>
        }
    }

</body>
</html>