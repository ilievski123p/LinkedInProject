@model linkedinproject.Models.Interest


<div class="row"  style="text-align:center; position:relative; margin-top:15%; left:30%; font-size:25px;">
    <div class="col-md-4">
        <form asp-action="MakeInterest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="">
                <label asp-for="EmployeeId" class="control-label"><strong>Employee:</strong></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmployerId" class="control-label"><strong>Employer:</strong></label>
                <select asp-for="EmployerId" class="form-control" asp-items="ViewBag.EmployerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Interested!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="form-group col-md-4 row" style="position:relative; left:41%;">
    <a href='javascript:history.go(-1)'>Back to profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
